{
  "copy": {
    "bower": {
      "files": [
        {
          "expand": true,
          "cwd": "bower_components",
          "dest": "../lib",
          "src": [
            "**/*.{css,js,ts,svg,map,eot,svg,ttf,woff,woff2,fla,gif,html,jpg,png}",
            "!jquery/**",
            "!**/examples/**",
            "!**/samples/**",
            "!**/demos/**",
            "!**/index.js",
            "!**/karma.conf.js",
            "!**/Gruntfile.js",
            "!**/src/**",
            "!**/package.js"
          ]
        },
        {
          "expand": true,
          "cwd": "bower_components/jquery/dist",
          "dest": "../lib/jquery",
          "src": [
            "**"
          ]
        }
      ]
    },
    "ts": {
      "files": [
        {
          "expand": true,
          "cwd": "../client/scripts",
          "dest": "../scripts",
          "src": ["**/*.js"]
        }
      ]
    }
  },
  "sass": {
    "default": {
      "files": {
        "../css/main.css": "../client/styles/main.scss"
      }
    }
  },
  "ts": {
    "default": {
      "options": {
        "module": "amd",
        "target": "es5",
        "declaration": false,
        "comments": false,
        "fast": "never",
        "failOnTypeErrors": true,
        "sourceMap": false
      },
      "files": [
        {
          "src": [
            "../types/all.d.ts",
            "../client/scripts/**/*.ts"
          ]
        }
      ]
    }
  },
  "tsd": {
    "refresh": {
      "options": {
        "command": "reinstall",
        "latest": true,
        "config": "config/tsd.config.json"
      }
    }
  },
  "cssmin": {
    "default": {
      "src": [
        "../css/*.css",
        "!*.min.css"
      ],
      "dest": "../css/main.min.css"
    }
  }
}