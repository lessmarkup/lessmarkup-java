md-dialog(ng-form="form" aria-label="{{title}}" flex="80")

    md-dialog-content
        md-subheader {{title}}

    md-content
        include _inputFormTemplateBody

    .md-actions
        md-button.md-raised.md-primary(ng-click="submit(form)" ng-disabled="okDisabled(form)" aria-label="OK")
            span {{ 'Main.ButtonOk' | translate }}
            md-progress-circular(ng-show="isApplying" md-mode="indeterminate")
        md-button.md-raised(ng-click="cancel()" ng-disabled="isApplying") {{ 'Main.ButtonCancel' | translate }}
